@{
    ViewBag.Title = "Cart Checkout";
}
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>Shop Leather Goods</title>
    <link href="~/Content/product.css" rel="stylesheet" />
    <link href="~/Content/cart.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Bentham|Playfair+Display|Raleway:400,500|Suranna|Trocchi" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.css" />
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.jssocials/1.4.0/jssocials.css" />
    <link type="text/css" rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.jssocials/1.4.0/jssocials-theme-flat.css" />

    <!--[if lte IE 6]><link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" /><![endif]-->
    <!-- JS -->
    <!-- End JS -->
</head>
<body>

    <!-- Main -->
    <div id="container">
        <!-- End Cart -->
        <!-- Cart Detail -->
        <div id="cart_detail_container">
            
            <div class="cart_detail">
                <div class="cart_title">
                    <h4>Tu Compra</h4>
                    <span class="arrow"></span>
                </div>
                <ul>
                    <li v-for="cart_item in cart">
                        <div class="cart_item_img">
                            <img v-bind:src="cart_item.Image">
                        </div>
                        <div class="cart_item_info">

                            <span>
                                <button type="submit" v-on:click="removeFromCart(cart_item.Id)">Eliminar</button>
                                <span class="item_title">{{ cart_item.Title }}</span>
                                <span class="fa fa-angle-left angle" v-on:click="decreaseQuantity(cart_item)"></span><span id="product_quantity"> {{ cart_item.Quantity }}</span><span class="fa fa-angle-right angle" v-on:click="increaseQuantity(cart_item)"></span>
                            </span>
                            <strong>${{ cart_item.Price * cart_item.Quantity }}</strong>
                        </div>
                    </li>
                </ul>
                <div style="clear:both;"></div>
                <p>
                    <span class="total_price">Total: <strong>${{ totalPrice() }}</strong></span>
                </p>
                <!-- <button class='confirm' type="submit">Confirmar</button> -->
            </div>
        </div>
        <!-- End Cart Detail -->



        <div class="panel panel-default credit-card-box">
            <div class="panel-heading display-table">
                <div class="row display-tr">
                    <h3 class="panel-title display-td">Datos de pago</h3>
                    <div class="display-td">
                        <img class="img-responsive pull-right" src="http://i76.imgup.net/accepted_c22e0.png">
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form role="form" id="payment-form" method="POST" action="javascript:void(0);">

                    <div class="row">
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="cardExpiry"><span class="hidden-xs">Nombre</span></label>
                                <input id="client_firstname"
                                       type="tel"
                                       class="form-control"
                                       name="cardExpiry"
                                       autocomplete="cc-exp"
                                       required />
                            </div>
                        </div>
                        <div class="col-xs-5 col-md-5 pull-right">
                            <div class="form-group">
                                <label for="cardCVC">Apellido</label>
                                <input id="client_lastname"
                                       type="tel"
                                       class="form-control"
                                       name="cardCVC"
                                       autocomplete="cc-csc"
                                       required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5 col-md-5 pull-right">
                            <div class="form-group">
                                <label for="cardCVC">Ciudad</label>
                                <input id="client_city"
                                       type="tel"
                                       class="form-control"
                                       name="cardCVC"
                                       autocomplete="cc-csc"
                                       required />
                            </div>
                        </div>
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="cardExpiry"><span class="hidden-xs">Pais</span></label>
@Html.DropDownList("CountryId", (SelectList)ViewBag.Countries, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="cardExpiry"><span class="hidden-xs">Email</span></label>
                                <input id="client_email"
                                       type="tel"
                                       class="form-control"
                                       name="cardExpiry"
                                       autocomplete="cc-exp"
                                       required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="cardNumber">Numero Tarjeta</label>
                                <div class="input-group">
                                    <input type="tel"
                                           class="form-control"
                                           name="cardNumber"
                                           autocomplete="cc-number"
                                           required autofocus />
                                    <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-7 col-md-7">
                            <div class="form-group">
                                <label for="cardExpiry"><span class="hidden-xs">Fecha de Vencimiento</span></label>
                                <input type="tel"
                                       class="form-control"
                                       name="cardExpiry"
                                       placeholder="MM / YY"
                                       autocomplete="cc-exp"
                                       required />
                            </div>
                        </div>
                        <div class="col-xs-5 col-md-5 pull-right">
                            <div class="form-group">
                                <label for="cardCVC">Codigo de Seguridad</label>
                                <input type="tel"
                                       class="form-control"
                                       name="cardCVC"
                                       placeholder="CVC"
                                       autocomplete="cc-csc"
                                       required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <button v-on:click="confirm" class="subscribe btn btn-success btn-lg btn-block" type="button">Confirmar Pago</button>
                        </div>
                    </div>
                    <div class="row" style="display:none;">
                        <div class="col-xs-12">
                            <p class="payment-errors"></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>      

        
    </div>
    <!-- End Main -->
    <div id="share"></div>

    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/jssocials.js"></script>
    <script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
    <script src="https://unpkg.com/vue"></script>
    <script src="~/Scripts/Checkout.js"></script>
    <script>
        vueRender(@Html.Raw(@ViewBag.cart_products), @Html.Raw(@ViewBag.cart_items));
    </script>
</body>